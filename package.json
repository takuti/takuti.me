{
  "name": "takuti.me",
  "author": "takuti",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "build": "gulp",
    "watch": "gulp watch",
    "clean": "rm -rf public/",
    "prepare": "husky install",
    "lint:sass": "stylelint assets/sass/*.scss"
  },
  "devDependencies": {
    "browser-sync": "^2.29.1",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-data": "^1.3.1",
    "gulp-kramdown": "^0.5.1",
    "gulp-plumber": "^1.2.1",
    "gulp-wrapper": "^1.0.0",
    "highlight.js": "^11.3.1",
    "husky": "^7.0.4",
    "imagemin-cli": "^7.0.0",
    "ini": "^2.0.0",
    "lint-staged": "^13.2.1",
    "lodash.template": ">=4.5.0",
    "minimist": "^1.2.6",
    "phantomjs-prebuilt": "^2.1.16",
    "stylelint": "^15.6.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "sync-request": "^6.1.0",
    "textlint-rule-footnote-order": "^1.0.3",
    "textlint-rule-ja-no-redundant-expression": "^4.0.1",
    "textlint-rule-ja-no-weak-phrase": "^2.0.0",
    "textlint-rule-no-start-duplicated-conjunction": "^2.0.2",
    "textlint-rule-preset-jtf-style": "^2.3.13"
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "rules": {
      "alpha-value-notation": null,
      "scss/no-global-function-names": null,
      "color-function-notation": "legacy"
    }
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --fix"
    ],
    "*.{png,jpeg,jpg,gif}": [
      "node ./scripts/js/imagemin.js"
    ],
    "_content/{en,ja}/note/*.{md,html}": [
      "python ./scripts/py/recommend.py",
      "git add -u _content/en/note _content/ja/note"
    ],
    "static/cv/index.html": [
      "phantomjs ./scripts/js/toPDF.js 'static/cv/index.html' static/cv/Takuya_Kitazawa.pdf A4",
      "git add static/cv/Takuya_Kitazawa.pdf"
    ]
  }
}
